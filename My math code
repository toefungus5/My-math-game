import random
correct = 0
total = 0
start = input("Would you like to start the infinite math game (Y/N)?: ")
while start == "Y":
    num1 = random.randint(1, 10)
    num2 = random.randint(1, 10)
    answer = int(input(f"What is {num1} times {num2}?: "))
    answer2 = int(num1 * num2)
    if answer == answer2:
        print("You are correct!")
        correct += 1
        total += 1
        print(f"You now have {correct}/{total} problems correct.")
    else:
        print("You are incorrect.")
        total += 1
        print(f"You now have {correct}/{total} problems correct.")